<div class="card">

    <div class="card-thumb"> 

        <img class="card-image" src="{{flag}}" alt="{{name}}">
        <h2>{{name}}</h2>
    </div>

 <div>
    <p class="card-text"><b>Capital:</b> {{capital}}</p>
    <p class="card-text"><b>Population:</b> {{population}}</p>
    <p class="card-text"><b>Languages:</b></p>
    <ul>
        {{#each languages}}
        <li>{{this.name}}</li>
         {{/each}}
    </ul>

 </div>

</div>
